---
import PageLayout from "./PageLayout.astro";

const { title, date } = Astro.props;
---

<PageLayout title={title}>
  <article>
    <header>
      <h1>{title}</h1>
      {date && <time>{date}</time>}
    </header>

    <div class="content">
      <slot />
    </div>
  </article>
</PageLayout>

<style>
  article {
    max-width: 65ch;
    margin: 0 auto;
  }

  h1 {
    font-family: var(--font-display);
    letter-spacing: -0.02em;
  }

  .content :global(p) {
    margin-bottom: 1.25em;
  }
</style>
