---
const { title = "Nuptiae", description = "", lang = "fr" } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#ffffff" />
    <link rel="canonical" href={Astro.url.href} />
    <link rel="icon" href="/favicon.ico" />

    <!-- OpenGraph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Playfair+Display:wght@400;600&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <main class="page">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    /* Typography */
    --font-body: Inter, system-ui, sans-serif;
    --font-display: "Playfair Display", serif;

    --fs-display: clamp(1.8rem, 5vw, 3.2rem);
    --fs-h1: clamp(1.6rem, 4vw, 2.6rem);
    --fs-h2: clamp(1.4rem, 3.5vw, 2.2rem);
    --fs-h3: clamp(1.2rem, 3vw, 1.6rem);
    --fs-body-lg: clamp(1rem, 2.5vw, 1.2rem);
    --fs-body: clamp(0.95rem, 2vw, 1.05rem);
    --fs-small: 0.8rem;

    --lh-tight: 1.15;
    --lh-normal: 1.85;
    --lh-loose: 2;

    /* Colors */
    --color-text: #2e2e2e;
    --color-muted: #777;
    --color-bg: #f6f6f6;
    --color-page: #ffffff;

    /* Spacing â€“ modular scale (base: 0.5rem) */
    --base-unit: 0.5rem;
    --space-1: calc(var(--base-unit) * 1);
    --space-2: calc(var(--base-unit) * 2);
    --space-3: calc(var(--base-unit) * 3);
    --space-4: calc(var(--base-unit) * 4);
    --space-5: calc(var(--base-unit) * 6);
    --space-6: calc(var(--base-unit) * 8);
    --space-7: calc(var(--base-unit) * 12);
    --space-8: calc(var(--base-unit) * 16);

    /* Layout */
    --content-max: 1100px;
    --container-pad: clamp(1rem, 4vw, 2rem);
  }

  html {
    scroll-behavior: smooth;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }

  body {
    margin: 0;
    font-family: var(--font-body);
    background: var(--color-bg);
    color: var(--color-text);
    line-height: var(--lh-normal);
    -webkit-font-smoothing: antialiased;
    text-rendering: optimizeLegibility;
  }

  .meta {
    font-size: var(--fs-small);
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--color-muted);
  }

  /* Page layout */
  .page {
    background: var(--color-page);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.08),
      0 4px 12px rgba(0, 0, 0, 0.05);
    margin: clamp(0, 2vw, 2rem);
  }

  @media (max-width: 480px) {
    .page {
      margin: 0;
      box-shadow: none;
    }
  }

  @media (min-width: 481px) and (max-width: 768px) {
    .page {
      margin: 0;
      box-shadow: none;
    }
  }

  @media (min-width: 1281px) {
    .page {
      margin: 0;
    }
  }

  /* Headings */
  h1,
  h2,
  h3,
  h4 {
    font-family: var(--font-display);
    font-weight: 500;
    letter-spacing: -0.02em;
    margin: 0;
    line-height: var(--lh-tight);
  }

  h1 { font-size: var(--fs-display); }
  h2 { font-size: var(--fs-h1); }
  h3 { font-size: var(--fs-h2); }
  h4 { font-size: var(--fs-h3); }

  p {
    font-size: var(--fs-body);
    line-height: var(--lh-loose);
    margin: 0 0 var(--space-3);
  }

  small {
    font-size: var(--fs-small);
    color: var(--color-muted);
  }

  section + section {
    margin-top: clamp(4rem, 8vw, 8rem);
  }

  /* Media */
  img {
    display: block;
    max-width: 100%;
  }

  /* Links */
  a {
    color: inherit;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  /* Selection */
  ::selection {
    background: #e8e2da;
    color: #2e2e2e;
  }

  /* Mobile typography scale */
  @media (max-width: 768px) {
    :root {
      --fs-body: 1rem;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    :root {
      --color-text: #f0f0f0;
      --color-muted: #aaa;
      --color-bg: #0f0f0f;
      --color-page: #1a1a1a;
    }

    ::selection {
      background: #333333;
      color: #f0f0f0;
    }
  }
</style>
