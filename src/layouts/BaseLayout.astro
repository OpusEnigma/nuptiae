---
const { title = "Nuptiae", description = "" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --font-body: Inter, system-ui, sans-serif;
    --font-display: "Playfair Display", serif;
    --space-1: 0.5rem;
    --space-2: 1rem;
    --space-3: 2rem;
  }

  body {
    font-family: var(--font-body);
    margin: 0;
    background: #fff;
    color: #111;
    line-height: 1.7;
  }
</style>
