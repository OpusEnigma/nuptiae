---
import LocationBlock from "./LocationBlock.astro";
---

<LocationBlock id="location-accommodation" title="Hébergements">

  <div class="accom-layout">

    <!-- Sidebar: form -->
    <aside class="accom-sidebar">
      <form class="accom-form" id="accom-form" autocomplete="off">

        <div class="accom-fields">

          <label class="accom-field">
            <span class="accom-label">Adultes</span>
            <input class="accom-input" type="number" name="adults" min="1" max="30" value="8" />
          </label>

          <label class="accom-field">
            <span class="accom-label">Arrivée</span>
            <input class="accom-input" type="date" name="checkin" value="2026-08-18" />
          </label>

          <label class="accom-field">
            <span class="accom-label">Départ</span>
            <input class="accom-input" type="date" name="checkout" value="2026-08-25" />
          </label>

        </div>

        <div class="accom-zones">

          <label class="accom-zone-btn">
            <input type="radio" name="zone" value="mariage" checked />
            <div class="accom-zone-body">
              <span class="accom-zone-name">Proche du mariage</span>
              <em class="accom-zone-note">Vacoas-Phoenix</em>
            </div>
          </label>

          <label class="accom-zone-btn">
            <input type="radio" name="zone" value="mer" />
            <div class="accom-zone-body">
              <span class="accom-zone-name">Bord de mer</span>
              <em class="accom-zone-note">Albion · Port-Louis · Flic-en-Flac · Tamarin</em>
            </div>
          </label>

        </div>

      </form>
    </aside>

    <!-- Results -->
    <div class="accom-results" id="accom-results" aria-live="polite"></div>

  </div>

</LocationBlock>

<style>
  /* Disable parent scroll — only results column scrolls */
  :global(#location-accommodation .location-block-content) {
    overflow: hidden;
  }

  /* ---- Overall layout ---- */

  .accom-layout {
    height: 100%;
    overflow: hidden;
    display: grid;
    grid-template-columns: clamp(260px, 28%, 360px) 1fr;
    gap: clamp(var(--space-6), 4vw, var(--space-10));
  }

  /* ---- Sidebar ---- */

  .accom-sidebar {
    height: 100%;
    display: flex;
    align-items: center;
    padding-right: var(--space-4);
  }

  .accom-form {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  /* Fields */

  .accom-fields {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .accom-field {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .accom-label {
    font-size: clamp(9px, 1.1vw, 10px);
    text-transform: uppercase;
    letter-spacing: 0.18em;
    color: var(--color-muted);
  }

  .accom-input {
    appearance: none;
    -webkit-appearance: none;
    background: var(--color-bg);
    border: 1px solid #d0ccc6;
    border-radius: 10px;
    padding: var(--space-2) var(--space-3);
    color: var(--color-text);
    font: inherit;
    font-size: clamp(0.875rem, 1.4vw, 1rem);
    transition: border-color 0.2s ease, background 0.2s ease;
  }

  .accom-input:focus {
    outline: none;
    border-color: #b5873a;
    background: #fff;
  }

  .accom-input::-webkit-calendar-picker-indicator {
    opacity: 0.5;
    cursor: pointer;
  }

  /* Zone radio cards */

  .accom-zones {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .accom-zone-btn {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3) var(--space-4);
    border-radius: 14px;
    border: 1px solid #d0ccc6;
    background: var(--color-bg);
    cursor: pointer;
    transition:
      border-color 0.2s ease,
      background 0.2s ease,
      transform 0.2s ease;
  }

  .accom-zone-btn input[type="radio"] {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  /* Radio dot */
  .accom-zone-btn::before {
    content: "";
    flex-shrink: 0;
    width: 15px;
    height: 15px;
    border-radius: 50%;
    border: 2px solid #c0bbb4;
    transition:
      border-color 0.2s ease,
      background 0.2s ease,
      box-shadow 0.2s ease;
  }

  .accom-zone-btn:has(input:checked)::before {
    border-color: #b5873a;
    background: #b5873a;
    box-shadow: 0 0 0 4px rgba(181, 135, 58, 0.15);
  }

  .accom-zone-btn:has(input:checked) {
    border-color: rgba(181, 135, 58, 0.5);
    background: rgba(181, 135, 58, 0.06);
    transform: translateX(5px);
  }

  .accom-zone-btn:hover:not(:has(input:checked)) {
    border-color: #b0aaa4;
    background: #efefef;
  }

  .accom-zone-body {
    display: flex;
    flex-direction: column;
    gap: 3px;
  }

  .accom-zone-name {
    font-size: clamp(0.875rem, 1.4vw, 1rem);
    font-weight: 500;
    color: var(--color-text);
  }

  .accom-zone-note {
    font-style: normal;
    font-size: clamp(9px, 1.1vw, 10px);
    color: var(--color-muted);
    letter-spacing: 0.07em;
  }

  /* ---- Results area ---- */

  .accom-results {
    height: 100%;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    padding: var(--space-6) var(--space-3) var(--space-6) clamp(var(--space-5), 3vw, var(--space-8));
    border-left: 1px solid #e0dbd4;
    scrollbar-width: none;
  }

  .accom-results::-webkit-scrollbar {
    display: none;
  }

  .accom-results::after {
    content: "";
    display: block;
    flex-shrink: 0;
    height: var(--space-6);
  }

  /* ---- Result items (injected by JS) ---- */

  :global(.accom-result-city) {
    display: flex;
    flex-direction: column;
  }

  :global(.accom-result-city-header) {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-bottom: var(--space-2);
    border-bottom: 1px solid #e0dbd4;
    cursor: pointer;
    user-select: none;
  }

  :global(.accom-result-city-name) {
    font-size: clamp(9px, 1.2vw, 11px);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.16em;
    color: var(--color-muted);
  }

  :global(.accom-result-city-chevron) {
    font-size: 10px;
    color: var(--color-muted);
    transition: transform 0.25s ease;
    line-height: 1;
  }

  :global(.accom-result-city[data-open="true"] .accom-result-city-chevron) {
    transform: rotate(180deg);
  }

  :global(.accom-result-city-body) {
    display: grid;
    grid-template-rows: 0fr;
    transition: grid-template-rows 0.3s ease, padding 0.3s ease;
    padding-top: 0;
  }

  :global(.accom-result-city[data-open="true"] .accom-result-city-body) {
    grid-template-rows: 1fr;
    padding-top: var(--space-3);
  }

  :global(.accom-result-city-body-inner) {
    overflow: hidden;
  }

  :global(.accom-result-links) {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  :global(.accom-result-link) {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-4) var(--space-5);
    border-radius: 16px;
    border: 1px solid #d0ccc6;
    background: var(--color-bg);
    color: var(--color-text);
    text-decoration: none;
    font-size: clamp(1rem, 1.8vw, 1.15rem);
    font-weight: 400;
    letter-spacing: 0.01em;
    transition:
      border-color 0.25s ease,
      color 0.25s ease,
      background 0.25s ease,
      transform 0.25s ease,
      box-shadow 0.25s ease;
  }

  :global(.accom-result-link:hover) {
    border-color: #b5873a;
    color: #8a6020;
    background: rgba(181, 135, 58, 0.06);
    transform: translateX(6px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
  }

  :global(.accom-result-link:focus-visible) {
    outline: 2px solid rgba(181, 135, 58, 0.6);
    outline-offset: 3px;
  }

  :global(.accom-result-arrow) {
    flex-shrink: 0;
    color: #c0bbb4;
    font-size: 1.1em;
    transition: color 0.2s ease, transform 0.2s ease;
  }

  :global(.accom-result-link:hover .accom-result-arrow) {
    color: #b5873a;
    transform: translateX(4px);
  }

  /* ---- Mobile ---- */

  @media (max-width: 900px) {
    .accom-layout {
      grid-template-columns: 1fr;
      height: auto;
      gap: var(--space-8);
    }

    .accom-sidebar {
      height: auto;
    }

    .accom-results {
      padding: var(--space-6) 0 0 0;
      border-left: none;
      border-top: 1px solid #e0dbd4;
      height: auto;
      max-height: 60vh;
    }
  }
</style>

<script>
  const BBOX: Record<string, { sw_lat: string; sw_lng: string; ne_lat: string; ne_lng: string }> = {
    mariage:   { sw_lat: "-20.325522", sw_lng: "57.443378",  ne_lat: "-20.244440", ne_lng: "57.529916" },
    flicenflac:{ sw_lat: "-20.325541", sw_lng: "57.328731", ne_lat: "-20.244459", ne_lng: "57.415269" },
    tamarin:   { sw_lat: "-20.365541", sw_lng: "57.326731", ne_lat: "-20.284459", ne_lng: "57.413269" },
    albion:    { sw_lat: "-20.269541", sw_lng: "57.365731", ne_lat: "-20.188459", ne_lng: "57.452269" },
    portlouis: { sw_lat: "-20.200541", sw_lng: "57.457731", ne_lat: "-20.119459", ne_lng: "57.544269" },
  };

  type Bbox = { sw_lat: string; sw_lng: string; ne_lat: string; ne_lng: string };

  function airbnbBbox(adults: string, checkin: string, checkout: string, bbox: Bbox) {
    const p = new URLSearchParams({
      "refinement_paths[]": "/homes",
      adults,
      checkin,
      checkout,
      search_by_map: "true",
      zoom: "13",
      ...bbox,
      location_search: "NEARBY",
      source: "structured_search_input_header",
      search_type: "unknown",
    });
    return `https://fr.airbnb.com/s/homes?${p.toString()}`;
  }

  function hometogoUrl(adults: string, checkin: string, checkout: string, bbox: Bbox) {
    const duration = Math.round(
      (new Date(checkout).getTime() - new Date(checkin).getTime()) / (1000 * 60 * 60 * 24)
    );
    const bounds = `${bbox.ne_lat},${bbox.sw_lng};${bbox.sw_lat},${bbox.ne_lng}`;
    const p = new URLSearchParams({ adults, arrival: checkin, duration: String(duration), bounds });
    return `https://www.hometogo.fr/search/559ef37bd9b45?${p.toString()}`;
  }

  function mauritiusVillaUrl(adults: string, checkin: string, checkout: string) {
    const bedrooms = Math.ceil(Number(adults) / 2);
    return `https://www.mauritius-villa.com/fr/search/${bedrooms}-bedroom-villas-west-mauritius?from=${checkin}&to=${checkout}`;
  }

  function vacationRenterUrl(adults: string, checkin: string, checkout: string, bbox: Bbox) {
    const coordinates = `${bbox.sw_lat}_${bbox.sw_lng}_${bbox.ne_lat}_${bbox.ne_lng}`;
    const p = new URLSearchParams({ checkin, checkout, nm: adults, coordinates, currency: "EUR" });
    return `https://www.vacationrenter.com/fr-fr/search/Maurice?${p.toString()}`;
  }

  function makeLink(label: string, href: string) {
    const a = document.createElement("a");
    a.className = "accom-result-link";
    a.href = href;
    a.target = "_blank";
    a.rel = "noopener noreferrer";

    const name = document.createElement("span");
    name.textContent = label;

    const arrow = document.createElement("span");
    arrow.className = "accom-result-arrow";
    arrow.textContent = "\u2192";

    a.appendChild(name);
    a.appendChild(arrow);
    return a;
  }

  function makeZoneGroup(cityName: string, entries: Array<{ label: string; href: string }>, collapsible = false, defaultOpen = true) {
    const city = document.createElement("div");
    city.className = "accom-result-city";

    if (collapsible) {
      city.dataset.open = defaultOpen ? "true" : "false";

      const header = document.createElement("div");
      header.className = "accom-result-city-header";

      const heading = document.createElement("span");
      heading.className = "accom-result-city-name";
      heading.textContent = cityName;

      const chevron = document.createElement("span");
      chevron.className = "accom-result-city-chevron";
      chevron.textContent = "▼";

      header.appendChild(heading);
      header.appendChild(chevron);
      header.addEventListener("click", () => {
        city.dataset.open = city.dataset.open === "true" ? "false" : "true";
      });
      city.appendChild(header);

      const body = document.createElement("div");
      body.className = "accom-result-city-body";
      const inner = document.createElement("div");
      inner.className = "accom-result-city-body-inner";

      const links = document.createElement("div");
      links.className = "accom-result-links";
      for (const { label, href } of entries) {
        links.appendChild(makeLink(label, href));
      }
      inner.appendChild(links);
      body.appendChild(inner);
      city.appendChild(body);
    } else {
      const header = document.createElement("div");
      header.className = "accom-result-city-header";
      const heading = document.createElement("span");
      heading.className = "accom-result-city-name";
      heading.textContent = cityName;
      header.appendChild(heading);
      city.appendChild(header);

      const links = document.createElement("div");
      links.className = "accom-result-links";
      links.style.paddingTop = "var(--space-3)";
      for (const { label, href } of entries) {
        links.appendChild(makeLink(label, href));
      }
      city.appendChild(links);
    }

    return city;
  }

  function update() {
    const form   = document.getElementById("accom-form") as HTMLFormElement;
    const result = document.getElementById("accom-results") as HTMLElement;
    const data   = new FormData(form);

    const adults   = String(data.get("adults") ?? "8");
    const checkin  = String(data.get("checkin") ?? "2026-08-18");
    const checkout = String(data.get("checkout") ?? "2026-08-25");
    const zone     = String(data.get("zone") ?? "mariage");

    result.innerHTML = "";

    const zones: Array<[string, string]> = zone === "mariage"
      ? [["mariage", "Vacoas-Phoenix"]]
      : [
          ["albion",     "La Preneuse & Albion"],
          ["portlouis",  "Port-Louis"],
          ["flicenflac", "Flic-en-Flac & Wolmar"],
          ["tamarin",    "Tamarin & Rivière Noire"],
        ];

    const isCollapsible = zone !== "mariage";
    for (let i = 0; i < zones.length; i++) {
      const [key, cityName] = zones[i];
      const bbox = BBOX[key];
      result.appendChild(makeZoneGroup(cityName, [
        { label: "Airbnb",           href: airbnbBbox(adults, checkin, checkout, bbox) },
        { label: "HomeToGo",         href: hometogoUrl(adults, checkin, checkout, bbox) },
        { label: "VacationRenter",   href: vacationRenterUrl(adults, checkin, checkout, bbox) },
        { label: "Mauritius Villa",  href: mauritiusVillaUrl(adults, checkin, checkout) },
      ], isCollapsible, i === 0));
    }
  }

  const form = document.getElementById("accom-form");
  form?.addEventListener("input", update);
  update();
</script>
