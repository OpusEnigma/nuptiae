---
import { Image } from "astro:assets";

const {
  id,
  title,
  location,
  image
} = Astro.props;
---

<article id={id} class="place">

  {image && (
    <div class="place-image">
      <Image src={image} alt={title} class="image" priority />
    </div>
  )}

  <div class="place-content">

    {location && (
      <div class="place-location">
        <svg viewBox="0 0 24 24" class="location-icon">
          <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"/>
          <circle cx="12" cy="9" r="2.5"/>
        </svg>
        <span>{location}</span>
      </div>
    )}

    <h3 class="place-title">
      {title}
    </h3>

    <div class="place-description">
      <slot />
    </div>

  </div>

</article>

<style>
  /* Structure */
  .place {
    scroll-snap-align: start;

    display: flex;
    flex-direction: column;
    max-width: 720px;
    width: 100%;
    box-sizing: border-box;
  }

  .place:hover {
    transform: translateY(clamp(-4px, -0.5vw, -6px));
    transition: transform 0.35s ease;
  }

  @keyframes place-activate {
    0%   { transform: translateY(0); }
    40%  { transform: translateY(clamp(-4px, -0.5vw, -6px)); }
    100% { transform: translateY(clamp(-4px, -0.5vw, -6px)); }
  }

  .place.active {
    animation: place-activate 0.4s ease forwards;
  }

  /* Content */
  .place-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  /* Description */
  .place-description {
    flex: 1;
    overflow-y: auto;
    scrollbar-width: thin;
  }

  /* Image */
  .place-image {
    width: 100%;
    overflow: hidden;
    margin-bottom: var(--space-4);
  }

  .place-image :global(img) {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .place:hover .place-image :global(img) {
    transform: scale(1.05);
  }

  /* Location */
  .place-location {
    display: flex;
    align-items: center;
    gap: var(--space-1);

    font-size: var(--fs-small);
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--color-muted);
    margin-bottom: var(--space-2);
  }

  .location-icon {
    width: clamp(12px, 2vw, 14px);
    height: clamp(12px, 2vw, 14px);
    fill: currentColor;
  }

  /* Title */
  .place-title {
    font-size: var(--fs-h3);
    line-height: var(--lh-tight);
    margin-bottom: var(--space-3);
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .place {
      transition: none;
    }

    .place:hover,
    .place.active {
      transform: none;
      animation: none;
    }
  }

  /* Mobile layout */
  @media (max-width: 768px) {
    .place-image {
      aspect-ratio: 4 / 3;
    }
  }

  /* Dark mode */
  @media (prefers-color-scheme: dark) {
    .place {
      color: var(--color-text);
    }

    .place-location {
      color: var(--color-muted);
    }
  }
</style>
