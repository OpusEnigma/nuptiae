---
interface Subcard {
  label: string;
  href: string;
}

interface Props {
  href: string;
  eyebrow: string;
  title: string;
  offset?: string;
  subcards?: Subcard[];
}

const { href, eyebrow, title, offset = "0px", subcards = [] } = Astro.props;
---

<div class="hero-card-group" style={`--offset: ${offset}`}>
  <a href={href} class="hero-card">
    <span class="eyebrow">{eyebrow}</span>
    <h3 class="hero-card-title">{title}</h3>
  </a>

  {subcards.length > 0 && (
    <div class="hero-subcards">
      {subcards.map((s) => (
        <a href={s.href} class="hero-subcard">{s.label}</a>
      ))}
    </div>
  )}
</div>

<style>
  .hero-card-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .hero-card {
    pointer-events: auto;
    width: clamp(200px, 90vw, 280px);
    padding: var(--space-3) var(--space-4);
    border-radius: clamp(12px, 2vw, 18px);

    color: #f4efe6;
    text-decoration: none;

    background: rgba(20, 18, 16, 0.55);
    backdrop-filter: blur(14px) saturate(1.2);
    -webkit-backdrop-filter: blur(14px) saturate(1.2);

    border: 1px solid rgba(255, 220, 150, 0.18);

    box-shadow:
      0 12px 34px rgba(0, 0, 0, 0.5),
      inset 0 1px 0 rgba(255, 255, 255, 0.06);

    --x: 0px;
    --offset: 0px;
    transform: translateX(calc(var(--x) + var(--offset)));

    transition:
      transform 0.35s ease,
      box-shadow 0.35s ease,
      border-color 0.35s ease;
  }

  .hero-card:focus-visible {
    outline: 2px solid rgba(255, 220, 150, 0.6);
    outline-offset: 2px;
  }

  .hero-card:hover {
    --x: 6px;
    border-color: rgba(255, 220, 150, 0.35);
    box-shadow:
      0 20px 48px rgba(0, 0, 0, 0.6),
      inset 0 1px 0 rgba(255, 255, 255, 0.08);
  }

  /* Typography */

  .hero-card .eyebrow {
    display: block;
    margin-bottom: var(--space-1);
    font-size: clamp(10px, 1.5vw, 11px);
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: rgba(255, 220, 150, 0.85);
  }

  .hero-card-title {
    margin: 0;
    font-family: inherit;
    font-size: clamp(1.4rem, 3vw, 1.9rem);
    font-weight: 500;
    color: inherit;
    line-height: var(--lh-tight);
    letter-spacing: -0.01em;
  }

  /* Subcards */

  .hero-subcards {
    pointer-events: auto;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-1);
    padding-left: var(--space-1);
    transform: translateX(var(--offset, 0px));
  }

  .hero-subcard {
    pointer-events: auto;
    padding: calc(var(--space-1) * 0.75) var(--space-2);
    border-radius: clamp(6px, 1vw, 10px);

    color: rgba(255, 220, 150, 0.8);
    text-decoration: none;
    font-size: clamp(9px, 1.3vw, 11px);
    letter-spacing: 0.12em;
    text-transform: uppercase;

    background: rgba(20, 18, 16, 0.4);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 220, 150, 0.12);

    transition:
      color 0.25s ease,
      border-color 0.25s ease,
      background 0.25s ease;
  }

  .hero-subcard:hover {
    color: rgba(255, 220, 150, 1);
    border-color: rgba(255, 220, 150, 0.3);
    background: rgba(20, 18, 16, 0.6);
  }

  .hero-subcard:focus-visible {
    outline: 2px solid rgba(255, 220, 150, 0.6);
    outline-offset: 2px;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .hero-card {
      transition: none;
    }
  }

  /* Mobile */
  @media (max-width: 900px) {
    .hero-card {
      --x: 0px;
      --offset: 0px;
    }
  }

  @media (max-width: 900px) {
    .hero-card-group {
      width: 100%;
    }

    .hero-card {
      width: 100%;
      box-sizing: border-box;
    }

    .hero-subcards {
      width: 100%;
      box-sizing: border-box;
      overflow: hidden;
    }
  }

  /* Dark mode */
  @media (prefers-color-scheme: dark) {
    .hero-card {
      background: rgba(40, 35, 30, 0.6);
      border-color: rgba(255, 220, 150, 0.12);
    }

    .hero-card:hover {
      border-color: rgba(255, 220, 150, 0.25);
    }
  }
</style>
