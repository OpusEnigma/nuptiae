---
import { Image } from "astro:assets";

const { 
    title, 
    image, 
    date, 
    time, 
    meal,
    veggie = false, 
    attendees, 
    dresscode } = Astro.props;

if (!image) {
  throw new Error("RitualHeader requires an image.");
}
---

<div class="ritual-header">

  <h3 class="ritual-title">{title}</h3>

  <div class="ritual-header-content">

    <div class="ritual-image">
      <Image src={image} alt="" />
    </div>

    {(date || time || meal || attendees || dresscode) && (
      <div class="ritual-infos">

        {date && (
          <div class="info-row">
            <span class="label">Date</span>
            <span class="value">{date}</span>
          </div>
        )}

        {time && (
          <div class="info-row">
            <span class="label">Heure</span>
            <span class="value">{time}</span>
          </div>
        )}

        {meal && (
          <div class="info-row">
            <span class="label">Repas{veggie && (
                <span class="veggie-icon" aria-label="VÃ©gÃ©tarien" title="VÃ©gÃ©tarien">
                  ðŸŒ¿
                </span>
              )}</span>
            <span class="value meal-value">
              {meal}
            </span>
          </div>
        )}

        {attendees && (
          <div class="info-row">
            <span class="label">Participants</span>
            <span class="value">{attendees}</span>
          </div>
        )}

        {dresscode && (
          <div class="info-row">
            <span class="label">Dress Code</span>
            <span class="value">{dresscode}</span>
          </div>
        )}

      </div>
    )}

  </div>

</div>

<style>
  .ritual-header {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    margin-bottom: var(--space-8);
  }

  /* Title */
  .ritual-title {
    font-size: var(--fs-h1);
    line-height: 1.15;
    max-width: 820px;
    letter-spacing: -0.02em;
  }

  /* Layout */
  .ritual-header-content {
    display: grid;
    grid-template-columns: clamp(280px, 40vw, 340px) 1fr;
    gap: clamp(2rem, 8vw, 3.5rem);
    align-items: center;
  }

  /* Image */
  .ritual-image :global(img) {
    display: block;
    width: 100%;
    height: auto;
  }

  /* Infos */
  .ritual-infos {
    display: grid;
    gap: clamp(0.5rem, 2vw, 0.8rem);
    font-size: clamp(0.85rem, 2vw, 0.9rem);
  }

  /* Label-value alignment */
  .info-row {
    display: grid;
    grid-template-columns: clamp(120px, 30vw, 160px) 1fr;
    gap: clamp(0.3rem, 1vw, 0.6rem);
  }

  /* Label style */
  .label {
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-muted);
    font-size: var(--fs-small);
  }

  /* Value style */
  .value {
    color: var(--color-text);
  }

  .meal-value {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
  }

  .veggie-icon {
    font-size: 0.9em;
    line-height: 1;
  }

  /* Mobile layout */
  @media (max-width: 768px) {
    .ritual-header-content {
      grid-template-columns: 1fr;
      gap: clamp(1.5rem, 4vw, 2rem);
    }

    .ritual-title {
      font-size: clamp(1.6rem, 4vw, var(--fs-h1));
    }

    .info-row {
      grid-template-columns: auto 1fr;
    }
  }

  /* Dark mode */
  @media (prefers-color-scheme: dark) {
    .ritual-header {
      color: var(--color-text);
    }

    .label {
      color: var(--color-muted);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .ritual-header {
      animation: none;
    }
  }
</style>

