---
import { Image } from "astro:assets";

import topGarlandImage from "../assets/top-garland-image.png";
---

<div class="top-garland" data-visible>
  <Image src={topGarlandImage} alt="" class="garland left" />
  <Image src={topGarlandImage} alt="" class="garland right" />
  <Image src={topGarlandImage} alt="" class="garland left" />
  <Image src={topGarlandImage} alt="" class="garland right" />
</div>

<style>
  .top-garland {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;

    display: flex;
    justify-content: center;
    align-items: flex-start;

    z-index: 100;
    pointer-events: none;
    overflow: hidden;

    opacity: 0;
    transition: opacity 0.8s ease;
  }

  .top-garland.visible {
    opacity: 1;
  }

  /* Garland segments */
  .top-garland :global(.garland) {
    display: block;
    width: clamp(15vw, 25vw, 30vw);
    height: auto;
  }

  /* Mirror effect */
  .top-garland :global(.right) {
    transform: scaleX(-1);
  }

  /* Mobile optimization */
  @media (max-width: 768px) {
    .top-garland :global(.garland) {
      width: clamp(20vw, 30vw, 35vw);
    }
  }

  /* Dark mode */
  @media (prefers-color-scheme: dark) {
    .top-garland {
      opacity: 0;
    }

    .top-garland.visible {
      opacity: 0.8;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .top-garland {
      transition: none;
    }
  }
</style>

<script>
  import { initializeVisibility } from "../utils/visibility";
  initializeVisibility();
</script>
