---
const { id, title } = Astro.props;
---

<section id={id} class="season-block">

  <header class="season-block-header">
    <h2 class="season-block-title">{title}</h2>
  </header>

  <div class="season-block-content">
    <slot />
  </div>

</section>

<style>
  .season-block {
    --pad: var(--container-pad);

    height: 100dvh;
    box-sizing: border-box;
    overflow: hidden;

    display: grid;
    grid-template-rows: auto 1fr;

    padding: var(--pad);
    padding-left: clamp(2.5rem, 5vw, 4rem);
    gap: var(--pad);
  }

  /* Header */

  .season-block-header {
    align-self: start;
  }

  .season-block-title {
    margin: 0;
    font-size: clamp(2.4rem, 6vw, 4.8rem);
    letter-spacing: -0.02em;
  }

  /* Content */

  .season-block-content {
    min-width: 0;
    min-height: 0;
    overflow: hidden;
  }

  /* Mobile */

  @media (max-width: 1024px) {
    .season-block {
      padding-left: var(--pad);
    }
  }

  /* Dark mode */

  @media (prefers-color-scheme: dark) {
    .season-block-title {
      color: var(--color-muted);
    }
  }
</style>
