---
import { Image, getImage } from "astro:assets";
import heroImage from "../assets/hero-image.png";

const hero = await getImage({
  src: heroImage,
  widths: [640, 1280, 1920],
  formats: ["webp", "avif"],
});
---

<section class="hero">
  <!-- fond flou -->
  <div class="hero-bg">
    <img
      src={hero.src}
      srcset={hero.srcset}
      sizes="100vw"
      alt=""
      aria-hidden="true"
      loading="eager"
      decoding="async"
    />
  </div>

  <!-- image nette -->
  <div class="hero-fg">
    <img
      src={hero.src}
      srcset={hero.srcset}
      sizes="(max-width: 1200px) 100vw, 1200px"
      alt=""
      aria-hidden="true"
      loading="eager"
      decoding="async"
    />
  </div>


  <!-- cartes -->
  <div class="hero-cards">
    <a href="/nuptiae/rituals" class="hero-card">
      <span class="eyebrow">Découvrir →</span>
      <h3>Les cérémonies</h3>
    </a>

    <a href="/nuptiae/location" class="hero-card">
      <span class="eyebrow">Explorer →</span>
      <h3>Le lieu</h3>
    </a>

    <a href="/nuptiae/region" class="hero-card">
      <span class="eyebrow">Explorer →</span>
      <h3>La région</h3>
    </a>
  </div>

</section>

<style>

.hero {
  position: relative;
  height: 100vh;
  min-height: 640px;
  overflow: hidden;
  background: #0b0b0d;
}

/* fond flou profond */
.hero-bg {
  position: absolute;
  inset: 0;
}

.hero-bg img {
  width: 100%;
  height: 100%;
  object-fit: cover;

  transform: scale(1.28);
  filter: blur(34px) brightness(0.38) saturate(1.12);
}

/* vignette sombre luxe */
.hero::before {
  content: "";
  position: absolute;
  inset: 0;
  pointer-events: none;

  background:
    radial-gradient(
      ellipse at center,
      rgba(0,0,0,0) 55%,
      rgba(0,0,0,0.35) 78%,
      rgba(0,0,0,0.65) 100%
    );
}

/* halo doré subtil */
.hero::after {
  content: "";
  position: absolute;
  inset: 0;
  pointer-events: none;

  background:
    radial-gradient(
      circle at 50% 55%,
      rgba(255,200,120,0.18) 0%,
      rgba(255,200,120,0.10) 18%,
      rgba(255,200,120,0.04) 32%,
      rgba(0,0,0,0) 55%
    );
}

/* image nette */
.hero-fg {
  position: relative;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-fg img {
  width: min(96vw, 1600px);
  max-height: 94vh;           /* ← monte davantage */
  height: auto;
  object-fit: contain;

  -webkit-mask-image: linear-gradient(
    to right,
    transparent 0%,
    black 1.5%,
    black 98.5%,
    transparent 100%
  );
  mask-image: linear-gradient(
    to right,
    transparent 0%,
    black 1.5%,
    black 98.5%,
    transparent 100%
  );

  filter:
    drop-shadow(0 22px 60px rgba(0,0,0,0.65))
    contrast(1.06)
    saturate(1.08);
}

.hero-cards {
  position: absolute;
  top: 50%;
  left: 4%;
  transform: translateY(-50%);

  display: flex;
  flex-direction: column;
  gap: 18px;

  pointer-events: none;
}

.hero-card {
  pointer-events: auto;
  position: relative; /* ← plus absolu */

  width: 280px;
  padding: 22px 24px;

  color: #f4efe6;
  text-decoration: none;
  border-radius: 18px;

  background: rgba(20,18,16,0.55);
  backdrop-filter: blur(14px) saturate(1.2);
  -webkit-backdrop-filter: blur(14px) saturate(1.2);

  border: 1px solid rgba(255,220,150,0.18);

  box-shadow:
    0 12px 34px rgba(0,0,0,0.5),
    inset 0 1px 0 rgba(255,255,255,0.06);

  transition: transform .35s ease, box-shadow .35s ease, border-color .35s ease;
}

.hero-card:hover {
  transform: translateX(6px); /* ← mouvement latéral luxe */
  border-color: rgba(255,220,150,0.35);
  box-shadow:
    0 20px 48px rgba(0,0,0,0.6),
    inset 0 1px 0 rgba(255,255,255,0.08);
}


/* positions dans le flou */
.hero-card:nth-child(1) {
  left: 5%;
  bottom: 18%;
}

.hero-card:nth-child(2) {
  left: 50%;
  bottom: 8%;
  transform: translateX(-50%);
}

.hero-card:nth-child(3) {
  right: 5%;
  bottom: 18%;
}

/* typo */
.hero-card .eyebrow {
  display: block;
  font-size: 11px;
  letter-spacing: .2em;
  text-transform: uppercase;
  color: rgba(255,220,150,0.85);
  margin-bottom: 6px;
}

.hero-card h3 {
  margin: 0 0 6px;
  font-size: 20px;
  font-weight: 500;
}

.hero-card p {
  margin: 0;
  font-size: 14px;
  color: rgba(244,239,230,0.75);
}

@media (max-width: 900px) {
  .hero-card {
    position: static;
    width: min(92%, 420px);
  }

  .hero-cards {
    position: absolute;
    left: 50%;
    bottom: 6%;
    transform: translateX(-50%);

    display: flex;
    flex-direction: column;
    gap: 14px;
    align-items: center;
  }
}


</style>
