---
import { Image } from "astro:assets";
import heroImage from "../assets/hero-image.png";
---

<section id="hero" class="hero">
  <div class="stage">
    <Image
      src={heroImage}
      alt="Paysage du lieu du mariage"
      class="image"
      priority
      sizes="(max-width: 1200px) 100vw, 1200px"
    />
  </div>
</section>

<style>
  /* ========================= */
  /* HERO */
  /* ========================= */

  .hero {
    height: 100vh;
    min-height: 640px;

    display: flex;
    align-items: center;
    justify-content: center;

    overflow: hidden;

    /* Utilise les variables globales */
    background: linear-gradient(
      to bottom,
      var(--color-bg) 82%,
      var(--color-page) 100%
    );
  }

  /* ========================= */
  /* STAGE */
  /* ========================= */

  .stage {
    position: relative;
    margin-inline: auto;

    height: 100%;
    aspect-ratio: 3 / 2;

    max-width: 100%;
  }

  /* ========================= */
  /* IMAGE */
  /* ========================= */

  .image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  /* ========================= */
  /* MOBILE */
  /* ========================= */

  @media (max-width: 768px) {
    .hero {
      min-height: 100vh;
    }

    .stage {
      width: 100%;
      height: 100%;
      aspect-ratio: auto;
    }

    .image {
      object-fit: cover;
    }
  }
</style>

