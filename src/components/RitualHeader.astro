---
import { Image } from "astro:assets";

const { 
    title, 
    image, 
    date, 
    time, 
    meal,
    veggie = false, 
    attendees, 
    dresscode } = Astro.props;

if (!image) {
  throw new Error("RitualHeader requires an image.");
}
---

<div class="ritual-header">

  <h3 class="ritual-title">{title}</h3>

  <div class="ritual-header-content">

    <div class="ritual-image">
      <Image src={image} alt="" />
    </div>

    {(date || time || meal || attendees || dresscode) && (
      <div class="ritual-infos">

        {date && (
          <div class="info-row">
            <span class="label">Date</span>
            <span class="value">{date}</span>
          </div>
        )}

        {time && (
          <div class="info-row">
            <span class="label">Heure</span>
            <span class="value">{time}</span>
          </div>
        )}

        {meal && (
          <div class="info-row">
            <span class="label">Repas{veggie && (
                <span class="veggie-icon" aria-label="VÃ©gÃ©tarien" title="VÃ©gÃ©tarien">
                  ðŸŒ¿
                </span>
              )}</span>
            <span class="value meal-value">
              {meal}
            </span>
          </div>
        )}

        {attendees && (
          <div class="info-row">
            <span class="label">Participants</span>
            <span class="value">{attendees}</span>
          </div>
        )}

        {dresscode && (
          <div class="info-row">
            <span class="label">Dress Code</span>
            <span class="value">{dresscode}</span>
          </div>
        )}

      </div>
    )}

  </div>

</div>

<style>
.ritual-header {
  display: flex;
  flex-direction: column;
  gap: 2.2rem;
  margin-bottom: var(--space-8);
}

/* TITRE PLUS IMPOSANT */
.ritual-title {
  font-size: clamp(2.4rem, 3vw, 2.9rem);
  line-height: 1.15;
  max-width: 820px;
  letter-spacing: -0.01em;
}

/* LIGNE IMAGE + INFOS */
.ritual-header-content {
  display: grid;
  grid-template-columns: 340px 1fr;
  gap: 3.5rem;
  align-items: center;
}

/* IMAGE PLUS GRANDE */
.ritual-image :global(img) {
  width: 100%;
  height: auto;
  display: block;
}

/* INFOS PLUS LISIBLES */
.ritual-infos {
  display: grid;
  gap: 0.8rem;
  font-size: 0.9rem;
  letter-spacing: 0.1em;
  text-transform: uppercase;
}

/* ALIGNEMENT LABEL / VALUE */
.info-row {
  display: grid;
  grid-template-columns: 160px 1fr;
  gap: 0.6rem;
}

.label {
  color: var(--color-subtle);
}

.value {
  color: var(--color-text);
}

.meal-value {
  display: inline-flex;
  align-items: center;
  gap: 0.35rem;
}

.veggie-icon {
  font-size: 0.9em;
  line-height: 1;
}

/* MOBILE */
@media (max-width: 768px) {
  .ritual-header-content {
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .ritual-title {
    font-size: 1.9rem;
  }

  .info-row {
    grid-template-columns: auto 1fr;
  }
}
</style>
