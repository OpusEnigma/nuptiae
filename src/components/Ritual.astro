---
/**
 * Props
 * - title
 * - time?
 * - meal?
 * - attendees?
 * - dresscode?
 */
const { title, time, meal, attendees, dresscode } = Astro.props;

if (!title) {
  throw new Error("Ritual requires a title.");
}
---

<section class="ritual">
  <h3 class="ritual-title">{title}</h3>

  {(time || meal || attendees || dresscode) && (
    <div class="ritual-infos">
      {time && <div><strong>Heure :</strong> {time}</div>}
      {meal && <div><strong>Repas :</strong> {meal}</div>}
      {attendees && <div><strong>Participants :</strong> {attendees}</div>}
      {dresscode && <div><strong>Dress Code :</strong> {dresscode}</div>}
    </div>
  )}

  <div class="ritual-body">
    <slot />
  </div>
</section>

<style>
.ritual {
  margin-bottom: 6rem;
}

.ritual-title {
  font-family: var(--font-display);
  font-size: 1.8rem;
  margin-bottom: 1rem;
}

.ritual-infos {
  margin-bottom: 3rem;
  font-size: 0.95rem;
  color: #555;
  display: flex;
  gap: 2rem;
  flex-wrap: wrap;
}

.ritual-body {
  display: block;
}
</style>
